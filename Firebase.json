{
  "hosting": {
    "public": "public",  // यह वह फोल्डर है जहाँ आपकी वेबसाइट की फाइलें होंगी
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"  // यह आपके Firebase Functions को रूट करेगा
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"  // यह फोल्डर है जहाँ आपके Firebase Functions के कोड होंगे
  }
}
