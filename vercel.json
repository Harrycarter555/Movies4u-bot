    const query = ctx.match[1];
    const movieDetails = getMovie(query);
    ctx.replyWithPhoto({ url: movieDetails.img, caption: `ðŸŽ¥ ${movieDetails.title}` });
    let caption = "âš¡ Fast Download Links :-\n\n";
